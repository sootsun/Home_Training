            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.dashboard.DashboardDetail"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
