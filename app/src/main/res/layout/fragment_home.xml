<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#3C3C3C"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="AI Gym"
            android:textColor="#FF9800"
            android:textSize="40sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="20dp"
            android:padding="16dp"
            android:text="극복의 순간은 우리가 한계를 넘어설 때 시작된다.     –아놀드 슈왈제네거-"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16sp" />


        <Button
            android:id="@+id/open_website_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF9800"
            android:onClick="loadData"
            android:text="푸쉬업 하러 가기"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="푸쉬업 개수"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <Button
            android:id="@+id/open_website_button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF9800"
            android:onClick="loadData"
            android:text="스쿼트 하러 가기"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_address1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="스쿼트 개수"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <Button
            android:id="@+id/open_website_button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF9800"
            android:onClick="loadData"
            android:text="티레이즈 하러 가기"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_address2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="티레이즈 개수"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/total_points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:text="총 포인트: 0"
            android:textColor="@color/white"
            android:textSize="18sp" />


    </LinearLayout>

</LinearLayout>
